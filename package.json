{
  "name": "drips-events-processor",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "commit": "npx cz",
    "prepare": "husky install",
    "format": "prettier --write .",
    "docker:clean": "docker-compose down && docker volume rm events-processor_postgres_data",
    "lint": "prettier --check . && eslint src/**/*.ts",
    "test": "AUTH_STRATEGY=dev jest --detectOpenHandles --config=jest.config.ts",
    "test:coverage": "jest --coverage",
    "build": "npm run build:contracts && tsc",
    "build:contracts": "typechain --target=ethers-v6 --out-dir contracts ./src/abi/**.json",
    "postbuild": "rm -rf ./dist/src/config/chainConfigs && cp -r ./src/config/chainConfigs ./dist/src/config/chainConfigs",
    "dev": "npx nodemon",
    "start": "npm run build && node dist/src/index.js",
    "check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.0",
    "@types/bull-arena": "^3.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.5.9",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@efstajas/versioned-parser": "^0.1.4",
    "bee-queue": "^1.5.0",
    "bull-arena": "^4.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "get-caller-file": "^2.0.5",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sequelize": "^6.32.1",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  }
}
